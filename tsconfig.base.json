{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "module": "esnext",
    "lib": ["es2019", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@nx-workspace/examples": ["libs/examples/src/index.ts"],
      "@nx-workspace/forms": ["libs/forms/src/index.ts"],
      "@nx-workspace/layout": ["libs/layout/src/index.ts"],
      "@nx-workspace/material": ["libs/material/src/index.ts"],
      "@nx-workspace/utils": ["libs/utils/src/index.ts"],
      "@puregeniusness/pg-forms": ["libs/pg-forms/src/index.ts"],
      "@puregeniusness/pg-layout": [
        "dist/libs/pg-layout",
        "dist/libs/pg-layout/*"
      ],
      "@puregeniusness/pg-layout/*": ["libs/pg-layout", "libs/pg-layout/*"],
      "@puregeniusness/pg-layout/tables": [
        "libs/pg-layout/tables/src/index.ts"
      ],
      "@puregeniusness/utils/*": ["libs/pg-utils, libs/pg-utils/*"],
      "@puregeniusness/utils/environment": [
        "libs/pg-utils/environment/src/index.ts"
      ],
      "@puregeniusness/wasm/*": ["libs/pg-wasm, libs/pg-wasm/*"],
      "@puregeniusness/wasm/script-loader": [
        "libs/pg-wasm/script-loader/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
